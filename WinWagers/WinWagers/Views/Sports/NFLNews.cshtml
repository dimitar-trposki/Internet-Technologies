@model List<WinWagers.Models.RssNewsItem>

@{
    ViewBag.Title = "NFL News";
}

<style>
    /* Scoped styles for NFL news page */
    body {
        padding: 20px; /* Adjust padding for this specific page */
        background-color: #f4f4f4; /* Keep the background */
    }

    .news-container {
        background-color: #ffcc00; /* Set the same background color as in the Premier League news */
        padding: 20px; /* Add padding around the content */
        border-radius: 5px; /* Add rounded corners */
        margin-top: 10px; /* Thinner gap at the top */
    }

    .news-title {
        text-align: center;
        color: #0056b3;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .news-list {
        list-style-type: none;
        padding: 0;
    }

    .news-item {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin: 10px 0;
        padding: 15px;
        transition: box-shadow 0.3s ease;
    }

        .news-item:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .news-item a {
            text-decoration: none;
            color: #0056b3;
            font-weight: bold;
            font-size: 18px;
        }

            .news-item a:hover {
                text-decoration: underline;
            }

        .news-item p {
            margin: 5px 0;
        }

        .news-item small {
            color: #666; /* Color for publication date */
        }
</style>

<div class="news-container">
    <h2 class="news-title">@ViewBag.LeagueName News</h2>
    <ul class="news-list">
        @foreach (var item in Model)
        {
            <li class="news-item">
                <a href="@item.Link" target="_blank">@item.Title</a>
                <p>@item.Description</p>
                <p><small>Published on: @item.PubDate</small></p>
            </li>
        }
    </ul>
</div>
