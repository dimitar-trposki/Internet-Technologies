@model IEnumerable<WinWagers.Models.Team>

@{
    ViewBag.Title = "Team Rankings";
}

<h2 class="text-center font-weight-bold">Team Rankings</h2>

<table id="table" class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Team Logo</th>
            <th>Team Name</th>
            <th>Games Played</th>
            <th>Wins</th>
            <th>Losses</th>
            <th>Draws</th>
            <th>Points</th>
        </tr>
    </thead>

    <tbody>
        @{ int Rank = 1; }
        @foreach (var item in Model)
        {
            <tr>
                <td>@Rank</td>
                <td>
                    <img src="@item.LogoUrl" alt="Logo of @item.Name" style="width: 50px; height: auto;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@item.PlayedGames()</td>
                <td>@Html.DisplayFor(modelItem => item.Wins)</td>
                <td>@Html.DisplayFor(modelItem => item.Losses)</td>
                <td>@Html.DisplayFor(modelItem => item.Draws)</td>
                <td>@item.PointsSoccer()</td>
            </tr>
            Rank++;
        }
    </tbody>
</table>

