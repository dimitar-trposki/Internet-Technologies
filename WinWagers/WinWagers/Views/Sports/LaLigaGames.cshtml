@model IEnumerable<WinWagers.Models.Game>

@{
    ViewBag.Title = "Upcoming Games";
}

<h2 class="text-center font-weight-bold">Upcoming Games</h2>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100" style="background-image: url('@item.HomeTeam.LogoUrl'); background-size: cover; background-position: center; color: white;">
                    <div class="card-body d-flex flex-column justify-content-between" style="background-color: rgba(0, 0, 0, 0.3); border-radius: 10px;">
                        <div class="info-box" style="padding: 10px; background-color: rgba(255, 255, 255, 0.7); border-radius: 8px; margin-bottom: 10px;">
                            <h5 class="card-title font-weight-bold">@item.HomeTeam.Name vs. @item.AwayTeam.Name</h5>
                            <h6 class="card-subtitle mb-2">@item.DateTime.ToString("f")</h6>
                            <p class="card-text" style="color: black;"><strong>Arena:</strong> @item.HomeTeam.Arena</p>
                        </div>
                        <div class="info-odds" style="padding: 10px; background-color: rgba(255, 255, 255, 0.8); border-radius: 8px;">
                            <p class="card-text" style="margin-bottom: 5px; color: black;"><strong>Odds:</strong></p>
                            <ul class="list-group" style="list-style-type: none; padding: 0;">
                                <li class="list-group-item list-group-item-dark">Home: @item.OddsHome.ToString("F2")</li>
                                <li class="list-group-item list-group-item-dark">Draw: @item.OddsDraw.ToString("F2")</li>
                                <li class="list-group-item list-group-item-dark">Away: @item.OddsAway.ToString("F2")</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background */
        color: #333; /* Dark text */
        font-family: Arial, sans-serif;
    }

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
        font-size: 2rem; /* Larger font size */
        color: #0056b3; /* Header color */
        font-weight: bold; /* Making the heading bold */
    }

    .card {
        border: none; /* Remove border */
        border-radius: 15px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        transition: transform 0.2s; /* Animation on hover */
        height: 100%; /* Ensure all cards are the same height */
    }

        .card:hover {
            transform: scale(1.05); /* Scale effect on hover */
        }

    .card-title {
        font-size: 1.5rem; /* Larger font size for title */
        color: #333; /* Title color */
        font-weight: bold; /* Make title bold */
    }

    .card-subtitle {
        font-size: 1.2rem; /* Slightly larger subtitle */
        color: #333; /* Subtitle color */
    }

    .info-box {
        padding: 10px;
        background-color: rgba(255, 255, 255, 0.8); /* Light background for the info box */
        border-radius: 8px; /* Rounded corners for the info box */
        margin-bottom: 10px; /* Spacing below the info box */
    }

    .info-odds {
        padding: 10px; /* Padding for odds section */
        background-color: rgba(255, 255, 255, 0.8); /* Light background for odds */
        border-radius: 8px; /* Rounded corners for odds */
    }

    .list-group-item {
        background-color: rgba(255, 255, 255, 0.8); /* Slightly transparent white */
        color: #000; /* Dark text */
        border: none; /* Remove border */
    }

    .list-group {
        margin-top: 10px; /* Spacing above the list */
    }
</style>
