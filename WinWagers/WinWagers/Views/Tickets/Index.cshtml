@model IEnumerable<WinWagers.Models.Ticket>

@{
    ViewBag.Title = "Tickets Index";
}

<div class="container mt-3">
    <!-- Reduced top margin -->
    <h2 class="text-center mb-4">Ticket List</h2>

    <p class="text-center">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary mt-2" }) <!-- Styled like the buttons in the NFL view -->
    </p>

    <div class="row justify-content-center">
        <!-- Center the cards horizontally -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card league-card h-100" style="border: 2px solid #003366; background-color: #ffcc00; border-radius: 15px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);">
                    <a href="@Url.Action("Details", "Tickets", new { id = item.Id })" style="text-decoration: none; color: inherit;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">Ticket ID: @item.Id</h5>
                            <p class="card-text"><strong>Stake:</strong> @Html.DisplayFor(modelItem => item.Stake) €</p>
                            <p class="card-text"><strong>Date:</strong> @Html.DisplayFor(modelItem => item.DateTime)</p>
                            <p class="card-text"><strong>Status:</strong> @Html.DisplayFor(modelItem => item.Status)</p>
                            <p class="card-text"><strong>Payout:</strong> @Html.DisplayFor(modelItem => item.Payout) €</p>
                        </div>
                    </a>
                    <div class="card-footer" style="background-color: #ffcc00; display: flex; justify-content: center;">
                        <a href="@Url.Action("Details", "Tickets", new { id = item.Id })" class="btn btn-primary mt-2">Details</a> <!-- Button styled like in the NFL view -->
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background color */
        color: #343a40; /* Dark text color */
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #0056b3; /* Header color */
        font-weight: bold; /* Bold header */
        text-transform: uppercase; /* Uppercase for a modern look */
    }

    .btn-primary {
        background-color: #007bff; /* Standard blue color */
        border-color: #007bff; /* Standard blue border color */
    }

    .league-card {
        transition: transform 0.3s; /* Smooth transition for hover effect */
        width: 100%; /* Make the card occupy full width of the column */
    }

        .league-card:hover {
            transform: scale(1.05); /* Scale effect on hover */
        }

    .card-footer {
        background-color: #ffcc00; /* Footer background to match overall theme */
    }
</style>
