@model MVCBooksChatGPT.Models.Book

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Authors.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authors.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

        <dt>
            @Html.DisplayName("Image")
        </dt>

        <dd>
            <img src="@Model.ImageUrl" class="max-width:200px" />
        </dd>

    </dl>
</div>

<h4>Members</h4>
<ul>
    @foreach (var item in Model.Members)
    {
        <li>
            <a href="/Members/Details/@item.MemberId">@item.Name</a>
        </li>
    }
</ul>

@Html.ActionLink("Add member to book", "AddMemberToBook", new { id = Model.BookId })

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BookId }) |
