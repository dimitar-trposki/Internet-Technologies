@model AlbumsMVC_Kolokviumska.Models.StoreAlbums
@{
    ViewBag.Title = "AddToStore";
}

<h2>Add album to store: @ViewBag.StoreName</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Albums)
        @Html.DropDownListFor(m => m.SelectedAlbumId, new SelectList(Model.Albums, "Id", "Name"), new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.StoreId)

    <button type="submit" class="btn btn-primary">Save</button>
}