@model AV6.Models.Movie
@{
    ViewBag.Title = "NewMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add a new movie</h2>

<!--<form method="post" action="/test">
    <input name="rating" />

    <button type="submit">Save</button>

</form>-->

@using (Html.BeginForm("InsertMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Title)
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Title)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Rating)
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", type = "number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DownloadURL)
        @Html.TextBoxFor(m => m.DownloadURL, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}