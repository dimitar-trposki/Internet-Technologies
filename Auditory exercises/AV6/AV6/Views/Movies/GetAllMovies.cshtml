@model List<AV6.Models.Movie>
@{
    ViewBag.Title = "GetAllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetAllMovies</h2>

<ul>
    @{
        int i = 0;
        foreach (var movie in Model)
        {
            <li>
                <h4>
                    <img src="@movie.ImageURL" style="max-width:100px" />
                    @Html.ActionLink(movie.Title, "ShowMovie", new { id = 1 })
                    @Html.ActionLink("Edit", "EditMovie", new { id = 1 })
                    @Html.ActionLink("Delete", "DeleteMovie", new { id = 1 })
                </h4>
            </li>
            i++;
        }
    }

</ul> 