@model AV6.Models.Client
@{
    ViewBag.Title = "ShowClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Age < 18)
{
    <h3 style="color:red">Потребен надзор од родител или старател.</h3>
}
else
{
    <h2>@Model.Name - @Model.MemberCard </h2>
    <h5>Phone: @Model.PhoneNumber</h5>
    <h5>Address: @Model.Address</h5>
}