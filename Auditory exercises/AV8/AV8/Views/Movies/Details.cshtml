@model AV8.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DownloadURL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DownloadURL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageURL)
        </dt>

        <dd>
            <img src="@Model.ImageURL" style="max-width:100px" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Rating)
        </dd>

    </dl>
</div>
<h4>
    Clients that rented this movie:
</h4>
<div>
    <ul>
        @foreach (var client in Model.clients)
        {
            <li>
                <a href="/Clients/Details/@client.Id">@client.Name, @client.Age</a>
            </li>
        }
    </ul>
</div>

@Html.ActionLink("Insert client to movie", "InsertNewClient", new { id = Model.Id })

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
