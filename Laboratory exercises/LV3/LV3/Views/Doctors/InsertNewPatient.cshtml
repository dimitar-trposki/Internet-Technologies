@model LV3.Models.PatientDoctor
@{
    ViewBag.Title = "InsertNewPatient";
}

<h2>Add new patient for doctor: @Model.Doctor.Name</h2>

@using (Html.BeginForm("InsertPatientDoctor", "Doctors"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.PatientId, new SelectList(Model.Patients, "Id", "Name"),
            new { @class = "form-control" })

        @Html.HiddenFor(m => m.DoctorId)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add patient to doctor</button>
    </div>
}